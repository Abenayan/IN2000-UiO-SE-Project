<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="4dp"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="84dp"
            app:cardBackgroundColor="#FFFF"
            app:cardCornerRadius="40dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/titleWeekly"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_width="60dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp"
                    android:textAlignment="center"/>

            <ImageView
                    android:id="@+id/icon_wind"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/wind_black"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_toStartOf="@id/weekly_wind"
                    android:layout_marginEnd="5dp"
                    android:baselineAligned="false"/>

            <TextView
                    android:id="@+id/weekly_wind"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"/>

            <ImageView
                    android:id="@+id/icon_wave"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/waves_black"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/weekly_wave"
                    android:layout_margin="10dp"/>

            <TextView
                    android:id="@+id/weekly_wave"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="center"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
